{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view":{
        "kind": "Form",
        "config":{
            "isWizard": false,
            "basics": {
                "description": "![Arcbox](https://i.ibb.co/KDmZW5L/output-onlinepngtools.png)"
             }
        },
        "properties":{
            "title": "Azure Arc Arcbox",
            "steps": [
                {
                    "name" : "basics",
                    "label": "Deployment location",
                    "description": "![Arcbox](https://i.ibb.co/KDmZW5L/output-onlinepngtools.png)",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "ArcBoxprereqs",
                    "label": "ArcBox pre-requisites",
                    "bladeTitle": "Arcbox prerequisites",
                    "elements": [
                        {
                            "name": "myipaddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "My Ip address",
                            "defaultValue": "",
                            "toolTip": "",
                            "visible": true
                        },
                        {
                            "name": "sshkey",
                            "type": "Microsoft.Common.TextBox",
                            "label": "SSH RSA Public Key",
                            "defaultValue": "",
                            "toolTip": "",
                            "visible": true
                        },
                        {
                            "name": "SPNclientId",
                            "type": "Microsoft.Common.TextBox",
                            "label": "SPN client Id",
                            "defaultValue": "",
                            "toolTip": "",
                            "visible": true
                        },
                        {
                            "name": "SPNclientSecret",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "SPN client Secret"
                            },
                            "toolTip": "",
                            "constraints": {
                                "required": true
                            },
                            "options": {
                                "hideConfirmation": true
                            },
                            "visible": true
                        },
                        {
                            "name": "WindowsAdminUsername",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Windows Admin Username",
                            "defaultValue": "",
                            "toolTip": "",
                            "visible": true
                        },
                        {
                            "name": "WindowsAdminPassword",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "Windows Admin Password",
                                "confirmPassword": "Confirm password"
                            },
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-zA-Z0-9]{8,}$",
                                "validationMessage": "Password must be at least 8 characters long, contain only numbers and letters"
                            },
                            "options": {
                                "hideConfirmation": false
                            },
                            "visible": true
                        }
                    ]
                }
            ]
        },
        "outputs":{
            "parameters":{
                "myipaddress": "[steps('ArcBoxprereqs').myipaddress]"
            },
            "kind": "Tenant",
            "location": "[steps('basics').resourceScope.location.name]"
        }
    }
}